{{#if shouldDisplay}}
  <div class="custom-search-banner flex align-center lg:p-12">
    <div class="wrap custom-search-banner-wrap flex flex-wrap md:gap-28 gap:10">
      <h1 class="md:!text-[6vw] font-[Inter] text-[#FBFAF8] tracking-wider font-extrabold">{{{theme-i18n "search_banner.headline"}}}</h1>

      <div class="flex flex-col flex-wrap content-center justify-evenly mt-2 lg:gap-0 gap-10">
        {{mount-widget widget="search-widget"}}
        <p>{{theme-i18n "search_banner.or" }}</p>
        {{mount-widget widget="create-topic"}}
      </div>
    </div>

  </div>
{{/if}}


